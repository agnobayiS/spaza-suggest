<div class="">
    <br>
    <form action="/submit/{{id}}" method="post">
        {{#if messages.info}}
        <div style="height:30px ;  " class="massages" s>
            <p style="color:green; font-size:25px; padding-left:35%; " class="massages">{{messages.info}}</p>
        </div>{{/if}}

        {{#if messages.erro}}
        <div style="height:30px ;" class="massages">
            <p style="color:red; font-size:25px; padding-left:35%; " class="massages">{{messages.erro}}</p>
        </div>{{/if}}

        <p style="font-size:20px ;">Enter suggested Iterm</p>
        <div>
            <input type="text" name="iterm" style="color:black ;" class="names" placeholder="Iterm Name">
        </div>


        <div class="input-field col s12">
            <p style="font-size:20px ;">Select your location</p>

            <p>
                {{#each areas}}
                <label>
                    <input name="location" type="radio" value={{id}} />
                    <span>{{area_name}}</span>

                </label>
                {{/each}}
            </p>

        </div>



        <button type="submit" class="btn" value="LOGIN">SUBMIT</button>
    </form>

    <br><br><br>
    <div class="containe">
        <div>
            <div class="regNumbers ">

                <table>
                    <tr>
                        <th>User ID</th>
                        <th>area</th>
                        <th>Iterm</th>

                    </tr>
                    {{#each data}}
                    <tr>
                        <td>{{this.area_id}}</td>
                        <td>{{this.area_name}}</td>
                        <td>{{this.product_name}}</td>

                    </tr>
                    {{/each}}
                </table>




            </div>

        </div>
    </div>
    <script src="/timeout.js"></script>
</div>